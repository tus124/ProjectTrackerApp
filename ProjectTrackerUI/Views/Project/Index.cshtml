@model IEnumerable<ProjectTrackerUI.Models.Project>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Projects List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Project" asp-action="Create" class="btn btn-primary">Create new Project</a>
        </div>
    </div>

    <br />
   <p></p> 

   @if(Model.Count() > 0)
   {
       <table class="table table-bordered table-striped" style="width:100%">
           <thead>
               <tr>
                   <th>Name</th>
                   <th>Description</th>
                   <th>Active</th>
               </tr>
           </thead>
           <tbody>
               @foreach(var item in Model)
               {
                   <tr>
                       <td width="25%">@item.Name</td>
                       <td width="25%">@item.Description</td>
                       <td width="25%">@item.Active</td>
                       <td width="25%">
                           <div class="w-100 btn-group" role="group">
                               <a asp-controller="Project" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Update</a>
                               <a asp-controller="Project" asp-action="Details" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Open Project</a>
                               <a asp-controller="Project" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                           </div>
                       </td>
                   </tr>
               }
           </tbody>
       </table> 
   }
   else
   {
    <p>No items created yet</p>
   }

</div>